
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<int> rateList = new List<int> { 1, 2, 3, 4, 5};
    var ratings = new SelectList(rateList);
}

@model GummiBearKingdom.Models.Review

<h2>Add Comment</h2>

@using (Html.BeginForm())
{
<div class="form-group">
    <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId"/>
    @Html.LabelFor(model => model.UserName)
    @Html.TextBoxFor(model => model.UserName, new {@class = "form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Rating)
    <select class="form-control" asp-for="Rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Body)
    @Html.TextAreaFor(model=> model.Body, new {@class = "form-control"})
</div>
<input type="submit" value="Save" class="btn btn-info" />
}
